{
  "compilerOptions": {
    // Target modern JS
    "target": "ES2020",
    "module": "CommonJS",

    // Root and output directories
    "rootDir": ".",
    "outDir": "dist",

    // Type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Module interoperability
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // Source maps and type declarations
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Node environment
    "types": ["node"]
  },
  "include": ["src", "tsconfig.json", "prisma/seed.ts"],
  "exclude": ["node_modules", "dist"]
}